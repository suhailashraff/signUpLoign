doctype html
html
  head
    title Add Notes
    link(rel="stylesheet", href="/styles.css")
  body
    div.container
      h1 Add Notes
      form(action="/notes", method="post")
        label(for="note") Note:
        input(type="text", id="note", name="note", required)
        button(type="submit") Add Note
      h2 Your Notes
      ul
        each note in notes
          li= note.note
